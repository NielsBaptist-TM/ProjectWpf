<Window x:Class="ProjectWpf.Highscores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWpf"
        mc:Ignorable="d"
        Title="Highscores" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Background" Value="#207178"></Setter>
                <Setter Property="Foreground" Value="#F5E9BE"></Setter>
                <Setter Property="FontSize" Value="25"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
            </Style>
        </Grid.Resources>
        <ListBox x:Name="LbHighscores" HorizontalAlignment="Center" Height="314" Margin="153,73,168,32" VerticalAlignment="Center" Width="471" Background="White" FontSize="16"/>
        <Button x:Name="BtnBack" Content="Terug" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Height="42" Click="BtnBack_Click"/>
        <Label Content="Highscores" HorizontalAlignment="Left" Margin="268,10,0,0" VerticalAlignment="Top" FontSize="36"/>
    </Grid>
</Window>
